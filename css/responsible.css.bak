@media screen and (max-width:1500px){ 
	.box1{width:40%; height:auto; clear:both; margin:2% 0 0.5% 0}
	.box2{width:40%; height:auto; float:right; margin:2% 0 0.5% 0}
	.box3{width:40%; height:auto; clear:both; margin-bottom:0.5%;}
	.box4{width:40%; height:auto; float:left; margin-bottom:0.5%; }
